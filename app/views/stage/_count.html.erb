<div class="row">
  <div class="wrap">
    <div class="countdown">
      <div class="bloc-time hours" data-init-value="<%= "#{@left_time[0]}#{@left_time[1]}" %>">
        <span class="count-title">Hours</span>

        <div class="figure hours hours-1">
          <span class="top"><%= @left_time[0] %></span>
          <span class="top-back">
            <span><%= @left_time[0] %></span>
          </span>
          <span class="bottom"><%= @left_time[0] %></span>
          <span class="bottom-back">
            <span><%= @left_time[0] %></span>
          </span>
        </div>

        <div class="figure hours hours-2">
          <span class="top"><%= @left_time[1] %></span>
          <span class="top-back">
            <span><%= @left_time[1] %></span>
          </span>
          <span class="bottom"><%= @left_time[1] %></span>
          <span class="bottom-back">
            <span><%= @left_time[1] %></span>
          </span>
        </div>
      </div>

      <div class="bloc-time min" data-init-value="<%= "#{@left_time[2]}#{@left_time[3]}" %>">
        <span class="count-title">Minutes</span>

        <div class="figure min min-1">
          <span class="top"><%= @left_time[2] %></span>
          <span class="top-back">
            <span><%= @left_time[2] %></span>
          </span>
          <span class="bottom"><%= @left_time[2] %></span>
          <span class="bottom-back">
            <span><%= @left_time[2] %></span>
          </span>
        </div>

        <div class="figure min min-2">
         <span class="top"><%= @left_time[3] %></span>
          <span class="top-back">
            <span><%= @left_time[3] %></span>
          </span>
          <span class="bottom"><%= @left_time[3] %></span>
          <span class="bottom-back">
            <span><%= @left_time[3] %></span>
          </span>
        </div>
      </div>

      <div class="bloc-time sec" data-init-value="<%= "#{@left_time[4]}#{@left_time[5]}" %>">
        <span class="count-title">Seconds</span>

          <div class="figure sec sec-1">
          <span class="top"><%= @left_time[4] %></span>
          <span class="top-back">
            <span><%= @left_time[4] %></span>
          </span>
          <span class="bottom"><%= @left_time[4] %></span>
          <span class="bottom-back">
            <span><%= @left_time[4] %></span>
          </span>
        </div>

        <div class="figure sec sec-2">
          <span class="top"><%= @left_time[5] %></span>
          <span class="top-back">
            <span><%= @left_time[5] %></span>
          </span>
          <span class="bottom"><%= @left_time[5] %></span>
          <span class="bottom-back">
            <span><%= @left_time[5] %></span>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
